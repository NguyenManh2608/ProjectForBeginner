<html lang="en">
<head>
    <title>Book Manager</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="./stylesheets/styles.css">

    <script>
        $(document).ready(function(){
            $("#myInput").on("keyup", function() {
                let value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });

            $('#popover-new').popover({
                container: 'body',
                html : true,
                content : function () {
                    return $('#popover-create').html();
                }
            });

            $('[data-toggle="popover"]').popover({
                container:'body',
                html:true,
                content : function () {
                    return $('#popover-update').html();
                }
            });

        });
    </script>

</head>

<!--------------------------------------------------------------------------------------------------------------->

<body>
    <h1 align="center">Book-Manager</h1>
    <div class="body-left">
        <div id="menu">
            <ul>
                <li><a href="http://localhost:8080">Home</a></li>
                <li><a href="http://localhost:8080/books">All books</a></li>
            </ul>
        </div>
    </div>

    <!------------------------------------------------------------------------------------------------------->

    <div>
        <div class="input-group">
            <input type="text" id="myInput" class="form-control" placeholder="Search..." name="search">

            <div class="input-group-btn">
                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
            </div>
        </div>
        </br>

        <div class="btn-group">
            <button type="button" class="btn btn-primary" id="popover-new" title="Create Book">Create Book</button>
        </div>

        <!------------------------------------------------------------------------------------------------------->

        <div class="hide" id="popover-create">
            <form >
                <div class="form-group">
                    <label >Title:</label>
                    <input name="Title" type="text" class="form-control" placeholder="Title">
                </div>


                <div class="form-group">
                    <label >Author:</label>
                    <input type="text" class="form-control" name="author" placeholder="Author">
                </div>

                <div class="form-group">
                    <label for="sel1">Publisher</label>
                    <select class="form-control" name="publisher">
                        <option>1</option>
                        <option>2</option>
                    </select>
                </div>

                <div class="form-group">
                    <label>Price</label>
                    <input type="text" class="form-control" name="price" placeholder="Price">
                </div>
                <button type="submit" class="btn btn-default">Create</button>
            </form>
        </div>


        <!------------------------------------------------------------------------------------------------------->

        <div class="hide" id="popover-update">
            <form >
                <div class="form-group">
                    <label >Title:</label>
                    <input type="text" class="form-control" id="title" placeholder="Title">
                </div>


                <div class="form-group">
                    <label >Author:</label>
                    <input type="text" class="form-control" id="author" placeholder="Author">
                </div>

                <div class="form-group">
                    <label for="sel1">Publisher</label>
                    <select class="form-control" id="sel1">
                        <option>1</option>
                        <option>2</option>
                    </select>
                </div>

                <div class="form-group">
                    <label>Price</label>
                    <input type="text" class="form-control" id="price" placeholder="Price">
                </div>
                <button type="submit" class="btn btn-default">Create</button>
            </form>
        </div>


        <!------------------------------------------------------------------------------------------------------->

        <table class="table table-bordered table-striped">
            <thead>
            <tr align="center">
                <td>Title</td>
                <td>Author</td>
                <td>Publisher</td>
                <td>Price</td>
                <td></td>
                <td></td>
            </tr>
            </thead>
            <tbody id="myTable" >
            <%for(var i = 0; i < data.length;i++){%>
            <tr>
                <td><%=data[i].title%></td>
                <td><%=data[i].author%></td>
                <td><%=data[i].publisher.name%></td>
                <td><%=data[i].price%></td>
                <td>
                    <a href="#<%=data[i].id%>" data-toggle="popover">Edit</a>
                </td>
                <td>
                    <a href="/book/<%=data[i].id%>" >Delete</a>
                </td>
                <%}%>
            </tr>
            </tbody>
        </table>
    </div>
</body>
</html>